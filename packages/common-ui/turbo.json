{
  "$schema": "https://turborepo.com/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "build:components",
        "build:styles"
      ]
    },
    "build-storybook": {
      "dependsOn": [
        "build:styles"
      ]
    },
    "build:styles": {
      "outputs": [
        "dist/**"
      ]
    },
    "build:components": {
      "outputs": [
        "dist/**"
      ]
    },
    "dev": {
      "with": [
        "@vi-space/utils#dev",
        "dev:styles",
        "dev:components"
      ]
    },
    "storybook": {
      "with": [
        "dev:styles",
        "@vi-space/utils#dev"
      ],
      "cache": false,
      "persistent": true
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "dev:components": {
      "cache": false,
      "persistent": true
    }
  }
}